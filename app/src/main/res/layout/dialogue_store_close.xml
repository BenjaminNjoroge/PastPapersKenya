<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/size_300dp"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/size_16dp"
    app:cardElevation="@dimen/size_8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/size_35dp"
            android:layout_height="@dimen/size_35dp"
            android:src="@drawable/ic_clear_64"
            android:layout_margin="@dimen/size_16dp"
            app:tint="@color/danger" />

        <TextView
            style="@style/ToolbarTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Close For now" />

        <TextView
            android:id="@+id/close_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Store will open at Saturday 6:00 PM" />

        <Button
            android:layout_margin="@dimen/size_16dp"
            android:id="@+id/close_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_accent"
            android:text="OK"
            android:textColor="@color/colorWhite"
            android:backgroundTint="@color/danger" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
