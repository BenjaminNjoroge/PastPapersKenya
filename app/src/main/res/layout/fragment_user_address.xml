<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.main.MainActivity">

    <ProgressBar
        android:id="@+id/rotate_progress"
        android:layout_width="@dimen/size_80dp"
        android:layout_height="@dimen/size_80dp"
        android:layout_gravity="center"
        android:visibility="gone"
        app:progress_color="@color/colorProgress" />


    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedscroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/size_50dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_15dp"
                android:layout_marginEnd="@dimen/size_15dp"
                android:orientation="vertical">


                <com.pastpaperskenya.papers.business.util.customview.RobotoTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/size_5dp"
                    android:text="@string/first_name"
                    android:textSize="@dimen/text_12sp"
                    android:textColor="@color/colorBlack"
                    android:textStyle="normal" />

                <RelativeLayout
                    android:id="@+id/billing_first_name_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/size_10dp"
                    android:background="@drawable/bg_input_field"
                    android:padding="@dimen/size_12dp">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/billing_icon_first_name"
                        android:layout_width="@dimen/size_16dp"
                        android:layout_height="@dimen/size_16dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_user_64"
                        android:tint="@color/colorBlackSemiTransparent" />

                    <EditText
                        android:id="@+id/input_billing_first_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/size_15dp"
                        android:layout_toEndOf="@+id/billing_icon_first_name"
                        android:background="@android:color/transparent"
                        android:fontFamily="sans-serif"
                        android:hint="@string/first_name"
                        android:inputType="text|textCapWords"
                        android:textColor="@color/colorBlack"
                        android:textColorHint="@color/colorBlackSemiTransparent"
                        android:textSize="@dimen/text_16sp"
                        app:errorEnabled="true"
                        app:errorTextAppearance="@style/TextInputErrorAppearance" />

                </RelativeLayout>

                <com.pastpaperskenya.papers.business.util.customview.RobotoTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/size_5dp"
                    android:text="@string/last_name"
                    android:textSize="@dimen/text_12sp"
                    android:textColor="@color/colorBlack"
                    android:textStyle="normal" />
                <RelativeLayout
                    android:id="@+id/billing_last_name_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/size_10dp"
                    android:background="@drawable/bg_input_field"
                    android:padding="@dimen/size_12dp">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/billing_icon_last_name"
                        android:layout_width="@dimen/size_16dp"
                        android:layout_height="@dimen/size_16dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_user_64"
                        android:tint="@color/colorBlackSemiTransparent" />

                    <EditText
                        android:id="@+id/input_billing_last_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/size_15dp"
                        android:layout_toEndOf="@+id/billing_icon_last_name"
                        android:background="@android:color/transparent"
                        android:fontFamily="sans-serif"
                        android:hint="@string/last_name"
                        android:inputType="text|textCapWords"
                        android:textColor="@color/colorBlack"
                        android:textColorHint="@color/colorBlackSemiTransparent"
                        android:textSize="@dimen/text_16sp"
                        app:errorEnabled="true"
                        app:errorTextAppearance="@style/TextInputErrorAppearance" />

                </RelativeLayout>

                <com.pastpaperskenya.papers.business.util.customview.RobotoTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/size_5dp"
                    android:text="@string/email"
                    android:textSize="@dimen/text_12sp"
                    android:textColor="@color/colorBlack"
                    android:textStyle="normal" />

                <RelativeLayout
                    android:id="@+id/billing_email_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/size_10dp"
                    android:background="@drawable/bg_input_field"
                    android:padding="@dimen/size_12dp">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/billing_icon_email"
                        android:layout_width="@dimen/size_16dp"
                        android:layout_height="@dimen/size_16dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_email_64"
                        android:tint="@color/colorBlackSemiTransparent" />

                    <EditText
                        android:id="@+id/input_billing_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/size_15dp"
                        android:layout_toEndOf="@+id/billing_icon_email"
                        android:background="@android:color/transparent"
                        android:fontFamily="sans-serif"
                        android:hint="@string/email"
                        android:inputType="text|textEmailAddress"
                        android:textColor="@color/colorBlack"
                        android:textColorHint="@color/colorBlackSemiTransparent"
                        android:textSize="@dimen/text_16sp"
                        app:errorEnabled="true"
                        app:errorTextAppearance="@style/TextInputErrorAppearance" />

                </RelativeLayout>

                <com.pastpaperskenya.papers.business.util.customview.RobotoTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/size_5dp"
                    android:text="@string/billing_phone_no"
                    android:textSize="@dimen/text_12sp"
                    android:textColor="@color/colorBlack"
                    android:textStyle="normal" />

                <RelativeLayout
                    android:id="@+id/billing_phone_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/size_10dp"
                    android:background="@drawable/bg_input_field"
                    android:padding="@dimen/size_12dp">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/billing_icon_phone"
                        android:layout_width="@dimen/size_16dp"
                        android:layout_height="@dimen/size_16dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_phone_64"
                        android:tint="@color/colorBlackSemiTransparent" />

                    <EditText
                        android:id="@+id/input_billing_phone"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/size_15dp"
                        android:layout_toEndOf="@+id/billing_icon_phone"
                        android:background="@android:color/transparent"
                        android:fontFamily="sans-serif"
                        android:hint="@string/mpesa_phone_no"
                        android:inputType="text|phone"
                        android:textColor="@color/colorBlack"
                        android:textColorHint="@color/colorBlackSemiTransparent"
                        android:textSize="@dimen/text_16sp"
                        app:errorEnabled="true"
                        app:errorTextAppearance="@style/TextInputErrorAppearance" />

                </RelativeLayout>

                <com.pastpaperskenya.papers.business.util.customview.RobotoTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/size_5dp"
                    android:text="@string/country"
                    android:textSize="@dimen/text_12sp"
                    android:textColor="@color/colorBlack"
                    android:textStyle="normal" />

                <RelativeLayout
                    android:id="@+id/billing_country_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/size_10dp"
                    android:background="@drawable/bg_input_field"
                    android:padding="@dimen/size_12dp">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/billing_icon_country"
                        android:layout_width="@dimen/size_16dp"
                        android:layout_height="@dimen/size_16dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_state_64"
                        android:tint="@color/colorBlackSemiTransparent" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/size_15dp"
                        android:layout_toEndOf="@+id/billing_icon_country">

                        <com.hbb20.CountryCodePicker
                            android:id="@+id/input_billing_country"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true"
                            android:background="@android:color/transparent"
                            android:hint="@string/country"
                            android:textColor="@color/colorBlack"
                            android:textColorHint="@color/colorBlackSemiTransparent"
                            android:textSize="@dimen/text_16sp"
                            app:errorEnabled="true"
                            app:ccp_countryPreference="KE,UG,TZ"
                            app:ccp_showFullName="true"
                            app:ccp_showPhoneCode="true"
                            app:ccp_autoDetectCountry="true"
                            app:ccp_rememberLastSelection="true"
                            app:errorTextAppearance="@style/TextInputErrorAppearance" />


                    </RelativeLayout>

                </RelativeLayout>

                <com.pastpaperskenya.papers.business.util.customview.RobotoTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/size_5dp"
                    android:text="@string/county"
                    android:textSize="@dimen/text_12sp"
                    android:textColor="@color/colorBlack"
                    android:textStyle="normal" />

                <RelativeLayout
                    android:id="@+id/billing_state_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/size_10dp"
                    android:background="@drawable/bg_input_field"
                    android:padding="@dimen/size_12dp">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/billing_icon_state"
                        android:layout_width="@dimen/size_16dp"
                        android:layout_height="@dimen/size_16dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_country_64"
                        android:tint="@color/colorBlackSemiTransparent" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/size_15dp"
                        android:layout_toEndOf="@+id/billing_icon_state">

                        <Spinner
                            android:id="@+id/input_billing_county"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true"
                            android:background="@android:color/transparent"
                            android:hint="@string/county"
                            android:textColor="@color/colorBlack"
                            android:textColorHint="@color/colorBlackSemiTransparent"
                            android:textSize="@dimen/text_16sp"
                            app:errorEnabled="true"
                            app:errorTextAppearance="@style/TextInputErrorAppearance" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="@dimen/size_12dp"
                            android:layout_height="@dimen/size_12dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_caret_down_64"
                            android:tint="@color/black" />

                    </RelativeLayout>

                </RelativeLayout>

                <com.pastpaperskenya.papers.business.util.customview.RobotoTextView
                    android:id="@+id/save_address"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_45dp"
                    android:background="@color/colorPrimary2"
                    android:gravity="center"
                    android:paddingTop="@dimen/size_10dp"
                    android:paddingBottom="@dimen/size_10dp"
                    android:text="@string/save"
                    android:textAllCaps="true"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/text_16sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


</androidx.coordinatorlayout.widget.CoordinatorLayout>