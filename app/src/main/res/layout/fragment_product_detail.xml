<?xml version="1.0" encoding="utf-8"?>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:shimmer="http://schemas.android.com/tools"
    android:theme="@style/AppTheme"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/app_bar_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_250dp"
            android:fitsSystemWindows="true">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/collapsing_toolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                app:titleEnabled="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_product_slider_image"
                    android:fitsSystemWindows="true"
                    app:layout_collapseMode="parallax">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/product_image_slider"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                    <LinearLayout
                        android:id="@+id/fav_share_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="@dimen/size_15dp"
                        android:background="@drawable/bg_product_fav"
                        android:visibility="visible">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/product_favourite"
                            android:layout_width="@dimen/size_20dp"
                            android:layout_height="@dimen/size_20dp"
                            android:layout_marginStart="@dimen/size_7dp"
                            android:layout_marginTop="@dimen/size_5dp"
                            android:layout_marginEnd="@dimen/size_7dp"
                            android:layout_marginBottom="@dimen/size_5dp"
                            android:src="@drawable/ic_fav_unmarked_128"
                            android:tint="@color/colorWhite" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/product_share"
                            android:layout_width="@dimen/size_20dp"
                            android:layout_height="@dimen/size_20dp"
                            android:layout_marginStart="@dimen/size_7dp"
                            android:layout_marginTop="@dimen/size_5dp"
                            android:layout_marginEnd="@dimen/size_7dp"
                            android:layout_marginBottom="@dimen/size_5dp"
                            android:src="@drawable/ic_share"
                            android:tint="@color/colorWhite" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/out_stock_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="@dimen/size_15dp"
                        android:background="@drawable/bg_product_out_stock"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <com.pastpaperskenya.app.business.util.customview.RobotoTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/size_5dp"
                            android:text="@string/product_not_available"
                            android:textColor="@color/colorWhite"
                            android:textStyle="bold" />

                    </LinearLayout>

                </RelativeLayout>

                <include
                    android:id="@+id/detail_toolbar"
                    layout="@layout/products_toolbar_layout"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    app:layout_collapseMode="pin" />

            </com.google.android.material.appbar.CollapsingToolbarLayout>

        </com.google.android.material.appbar.AppBarLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <ProgressBar
            android:id="@+id/pbLoading"
            android:layout_width="@dimen/size_50dp"
            android:layout_height="@dimen/size_50dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/linLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">


                <com.pastpaperskenya.app.business.util.customview.NeoSansProTextView
                    android:id="@+id/product_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size_5dp"
                    android:layout_weight="0.70"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Product name"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/text_17sp"
                    android:textStyle="bold" />

                <com.pastpaperskenya.app.business.util.customview.RobotoTextView
                    android:id="@+id/product_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_weight="0.30"
                    android:gravity="center"
                    android:text="@string/text_placeholder"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/text_16sp"
                    android:textStyle="bold"/>
            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/linLayout2"
                android:layout_below="@+id/linLayout1"
                android:layout_marginTop="@dimen/size_5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/size_10dp"
                android:weightSum="3">

                <com.pastpaperskenya.app.business.util.customview.RobotoTextView
                    android:id="@+id/product_rating_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size_20dp"
                    android:text="@string/text_placeholder"
                    android:textSize="@dimen/text_14sp"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold"
                    android:layout_weight="1"/>

                <com.pastpaperskenya.app.business.util.customview.RobotoTextView
                    android:id="@+id/rating_review"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size_25dp"
                    android:text="@string/ratings_and_reviews_underline"
                    android:padding="@dimen/size_5dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/text_12sp"
                    android:layout_weight="1"/>

                <com.pastpaperskenya.app.business.util.customview.RobotoTextView
                    android:id="@+id/product_review_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_placeholder"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/text_13sp"
                    android:layout_weight="1"/>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/linLayout3"
                android:layout_below="@+id/linLayout2"
                android:layout_marginTop="@dimen/size_5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/size_10dp"
                android:weightSum="3">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <com.pastpaperskenya.app.business.util.customview.RobotoTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/size_20dp"
                        android:text="@string/regularPrice"
                        android:textSize="@dimen/text_14sp"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <com.pastpaperskenya.app.business.util.customview.RobotoTextView
                        android:id="@+id/product_regular_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/size_20dp"
                        android:text="@string/text_placeholder"
                        android:textSize="@dimen/text_14sp"
                        android:textColor="@color/colorAccent"
                        android:textStyle="italic"
                        android:background="@drawable/strike_trough_text"/>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <com.pastpaperskenya.app.business.util.customview.RobotoTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/size_20dp"
                        android:text="@string/salePrice"
                        android:textSize="@dimen/text_14sp"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <com.pastpaperskenya.app.business.util.customview.RobotoTextView
                        android:id="@+id/product_sale_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/size_20dp"
                        android:text="@string/text_placeholder"
                        android:textSize="@dimen/text_14sp"
                        android:textColor="@color/colorAccent"
                        android:textStyle="italic" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <com.pastpaperskenya.app.business.util.customview.RobotoTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/size_20dp"
                        android:text="@string/discount"
                        android:textSize="@dimen/text_14sp"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <com.pastpaperskenya.app.business.util.customview.RobotoTextView
                        android:id="@+id/product_discount_percent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/product_image"
                        android:layout_marginStart="@dimen/size_5dp"
                        android:layout_marginBottom="@dimen/size_3dp"
                        android:background="@color/danger"
                        android:maxLines="1"
                        android:paddingStart="@dimen/size_2dp"
                        android:paddingEnd="@dimen/size_2dp"
                        android:text="@string/text_placeholder"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/text_12sp"
                        android:visibility="visible" />

                </LinearLayout>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/linLayout4"
                android:layout_below="@+id/linLayout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_1dp"
                    android:background="?attr/dividerHorizontal" />

                <com.pastpaperskenya.app.business.util.customview.RobotoTextView
                    android:id="@+id/product_short_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/size_10dp"
                    android:textSize="@dimen/text_14sp"
                    android:text="@string/text_placeholder" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/linLayout5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linLayout4"
                android:layout_marginStart="@dimen/size_2dp"
                android:layout_marginTop="@dimen/size_2dp"
                android:layout_marginEnd="@dimen/size_2dp"
                android:layout_marginBottom="@dimen/size_2dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/grayExtraLight"
                    android:weightSum="2">

                    <com.pastpaperskenya.app.business.util.customview.RobotoTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/size_2dp"
                        android:text="@string/payment_total"
                        android:textColor="@color/colorBlack"
                        android:textStyle="bold"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/change_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/size_10dp"
                        android:textStyle="italic"
                        android:textAllCaps="false"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/colorProgress"
                        android:text="Change Address" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divider"
                    android:background="@color/grayLight" />

                <LinearLayout
                    android:id="@+id/payment_total_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_5dp"
                    android:layout_marginBottom="@dimen/size_10dp"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <com.pastpaperskenya.app.business.util.customview.RobotoTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/size_10dp"
                        android:layout_weight=".75"
                        android:text="@string/total"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/text_14sp"
                        android:textStyle="bold" />

                    <com.pastpaperskenya.app.business.util.customview.RobotoTextView
                        android:id="@+id/payment_total_price"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".25"
                        android:background="@color/grayExtraLight"
                        android:gravity="center"
                        android:padding="@dimen/size_3dp"
                        android:text="@string/text_placeholder"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/text_15sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </androidx.appcompat.widget.LinearLayoutCompat>


        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>

    </RelativeLayout>
    <LinearLayout
        android:id="@+id/linLayout6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="bottom"
        android:layout_marginStart="@dimen/size_10dp"
        android:layout_marginBottom="@dimen/size_50dp">

        <TextView
            style="text-decoration: underline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/select_payment_method"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/text_24sp"
            android:textStyle="bold"
            android:layout_marginBottom="@dimen/size_10dp"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/payment_method_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_80dp"
            android:layout_gravity="bottom"
            android:layout_marginStart="@dimen/size_10dp"
            android:layout_marginEnd="@dimen/size_10dp"
            android:layout_marginBottom="@dimen/size_10dp"
            android:background="@color/placeholder"
            app:cardBackgroundColor="@color/colorWhite"
            app:cardCornerRadius="@dimen/size_0dp"
            app:cardElevation="@dimen/size_3dp"
            app:cardUseCompatPadding="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="2">

                <ImageView
                    android:id="@+id/paywithmpesa"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/size_20dp"
                    android:layout_marginEnd="@dimen/size_20dp"
                    android:layout_weight="1"
                    android:enabled="false"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_mpesa" />

                <View
                    android:layout_width="@dimen/size_2dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_20dp"
                    android:layout_marginBottom="@dimen/size_20dp"
                    android:background="@color/placeholder" />

                <ImageView
                    android:id="@+id/paywithcard"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/size_20dp"
                    android:layout_marginEnd="@dimen/size_20dp"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_card" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

