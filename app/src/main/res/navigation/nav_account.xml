<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_account"
    app:startDestination="@id/profileFragment">

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.pastpaperskenya.app.presentation.main.profile.profile.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile">
        <action
            android:id="@+id/action_profileFragment_to_editProfileFragment"
            app:destination="@id/editProfileFragment" />

    </fragment>
    <fragment
        android:id="@+id/editProfileFragment"
        android:name="com.pastpaperskenya.app.presentation.main.profile.editprofile.EditProfileFragment"
        android:label="Edit Profile"
        tools:layout="@layout/fragment_edit_profile" >
        <action
            android:id="@+id/action_editProfileFragment_to_changePasswordFragment"
            app:destination="@id/changePasswordFragment" />
        <action
            android:id="@+id/action_editProfileFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
        <action
            android:id="@+id/action_editProfileFragment_to_myOrdersDetailsFragment"
            app:destination="@id/myOrdersDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/changePasswordFragment"
        android:name="com.pastpaperskenya.app.presentation.main.profile.reset.ChangePasswordFragment"
        android:label="Reset Password"
        tools:layout="@layout/fragment_change_password" >
    </fragment>

    <fragment
        android:id="@+id/myOrdersFragment"
        android:name="com.pastpaperskenya.app.presentation.main.profile.profile.MyOrdersFragment"
        android:label="MyOrdersFragment"
        tools:layout="@layout/fragment_my_orders_details">
        <action
            android:id="@+id/action_myOrdersFragment_to_myOrdersDetailsFragment"
            app:destination="@id/myOrdersDetailsFragment" />
    </fragment>

    <fragment
        android:id="@+id/myOrdersDetailsFragment"
        android:name="com.pastpaperskenya.app.presentation.main.profile.profile.MyOrdersDetailsFragment"
        android:label="fragment_my_orders_details"
        tools:layout="@layout/fragment_my_orders_details">

        <argument android:name="id"
            app:argType="integer"/>

    </fragment>

</navigation>